<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <script type='text/javascript' src='http://code.jquery.com/jquery-1.8.2.min.js'></script>
        <script type='text/javascript' src='http://code.jquery.com/ui/1.10.3/jquery-ui.min.js'></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"> </script>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"> </script>
        <link href="@Url.Content("~/Content/favicon.ico")" rel="SHORTCUT ICON"/>
       
    </head>
    <body>
        
        <div class="navbar navbar-inverse navbar-fixed-top nav">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="brand">SpotiChelas</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Home")"><i class="icon-home icon-white"></i> Home</a></li>
                           <li><a href="@Url.Action("Index", "Playlist")"><i class="icon-play icon-white"></i> Playlists</a></li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                           
                        </ul>
                        <ul class="nav pull-right">
                             <li>  @Html.Partial("_SearchPartial")</li>
                            @Html.Partial("_LogOnPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <span class="pull-right">
                  
                </span>
                <section>
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer>
            <br/>
            <p class="text-center muted">© 2013 SpotiChelas</p>
        </footer>
    </body>
</html>