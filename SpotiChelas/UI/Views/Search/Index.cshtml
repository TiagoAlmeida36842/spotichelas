@model  UI.ViewModels.SearchResultsViewModel

@{
    ViewBag.Title = "Index";
}

<h1>Results</h1>

<table>
    <tr>
        <th>
            Artist
        </th>
        <th>
            Name
        </th>
        <th>
            Duration
        </th>
    </tr>
    
    @{ bool isLogged = User.Identity.IsAuthenticated; }


    @foreach (SpotifyTrack track in Model.Tracks)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => track.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => track.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => track.Duration)
            </td>
            @if (isLogged)
            {
                <td>
                    @using (Html.BeginForm("AddSpotifyTrack", "Playlist", FormMethod.Post))
                    {
                        @Html.Hidden("trackid", track.Id)
                        @Html.DropDownList("playlistId", new SelectList(Model.Playlists, "Id", "Name"))
                        <input type="submit" value="Add" />
                    }
                </td>
            }

        </tr>
    }

</table>